<Window x:Class="CourseManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagerWPF"
        xmlns:vm="clr-namespace:CourseManagerWPF.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="Course Manager" Height="450" Width="800"
        Background="LightGray">

    <Window.DataContext>
        <vm:MainVM />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/Image/ImageDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
         
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="320"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="0" 
                      VerticalAlignment="Stretch"
                      
            Panel.ZIndex="1"
            BorderBrush="DarkGray"
            BorderThickness="1" />

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel>
                
                <TabControl>
                    
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="20" Height="20" Source="{StaticResource IconCourse}"/>
                                <TextBlock Margin="4, 4, 0, 0" Text="Courses"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <ListBox ItemsSource="{Binding Courses}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="20" Height="20" Source="{StaticResource IconGroup}"/>
                                <TextBlock Margin="4, 4, 0, 0" Text="Groups"/>
                            </StackPanel>
                        </TabItem.Header>

                        <ListBox ItemsSource="{Binding Groups}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="20" Height="20" Source="{StaticResource IconStudent}"/>
                                <TextBlock Margin="4, 4, 0, 0" Text="Students"/>
                            </StackPanel>
                        </TabItem.Header>

                        <ListBox ItemsSource="{Binding Students}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="20" Height="20" Source="{StaticResource IconTeacher}"/>
                                <TextBlock Margin="4, 4, 0, 0" Text="Teachers"/>
                            </StackPanel>
                        </TabItem.Header>

                        <ListBox ItemsSource="{Binding Teachers}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </TabItem>

                </TabControl>
                
            </StackPanel>

            <GroupBox Grid.Row="1" MinHeight="40">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <Button Height="38" Width="60" Content="Add">
                        
                    </Button>
                </StackPanel>
            </GroupBox>
            
            
            
        </Grid>

        <Grid Grid.Column="1"> 
            
        </Grid>
        
    </Grid>
</Window>
